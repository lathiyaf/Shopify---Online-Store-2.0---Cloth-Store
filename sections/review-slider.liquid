<div class="product_review{% if section.settings.mobile_hide %} small-hide{% endif %}">
  <div class="product_review_inner"{% if section.settings.bg_color != blank %} style="background-color:{{ section.settings.bg_color }}"{% endif %}>    
      {% if section.settings.section_title != blank %}
      <div class="section_header text-center">
        <h2>{{ section.settings.section_title }}</h2>
        {% if section.settings.section_info != blank %}
        <div class="richtext">
        	{{ section.settings.section_info }}
        </div>
        {% endif %}
      </div>
      {% endif %}
      <div class="product_review_start">
        <div class="product_review_slider list-unstyled grid grid--4-col-tablet align-items-center justify-content-center pb-4">
        	{% for block in section.blocks %}
          	<div class="grid__item mb-3 px-2">
              <div class="product_review_card p-3">
                <div class="product_review_card_top d-flex align-items-center justify-content-between">                  
                  <div class="product_review_card_top_info">
                    {% if block.settings.reviewer_name != blank %}
                    	<h6>{{ block.settings.reviewer_name }}</h6>
                    {% endif %}
                    {% if block.settings.enable_star_rating != blank %}
                    <div class="star_rating">
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>                   
                    </div>
                    {% endif %}
                  </div>	     
                  {% if block.settings.product_img != blank %}
                  <div class="product_review_card_top_img">
                  	<img class="object_cover" width="68px" height="68px" src="{{ block.settings.product_img | img_url: 'master' }}" alt="{{ block.settings.product_img.alt }}"/>
                  </div>
                  {% endif %}
                </div>
                <div class="product_review_card_bottom">
                  	{% if block.settings.richtext != blank %}
                	<div class="richtext fs_14 py-3">
                        <p>{{ block.settings.richtext }}</p>
                    </div>
                  	{% endif %}
                  	{% if block.settings.review_time != blank %}
                  		<span class="fs_14">{{ block.settings.review_time }}</span>
                  	{% endif %}
                </div>
              </div>
          	</div>
          	{% endfor %}
        </div>
      </div>    
  </div>
</div>
{% schema %}
  {
    "name": "Review slider",
	"tag": "section",	
    "settings": [
		{
          "type": "checkbox",
          "id": "mobile_hide",
          "label": "Hide the section in mobile",
		  "default": true
        },
		{
			"type": "color",
			"id": "bg_color",
			"label": "Background color"
		},
		{
			"type": "header",
			"content": "section header"
		},
		{
			"type": "text",
			"id": "section_title",
			"label": "Section title"
		},
		{
			"type": "richtext",
			"id": "section_info",
			"label": "Section info"
		}
	],
	"blocks": [
		{
			"type": "reviewSlider",
			"name": "Product Review",
            "settings":[
				{
                    "type": "image_picker",
                    "id": "product_img",
                    "label": "Product image",
					"info": "Use 68X68 dimension image"
                },
				{
                    "type": "text",
                    "id": "reviewer_name",
                    "label": "Reviewer name",
					"default": "Ashley"
                },
				{
                    "type": "checkbox",
                    "id": "enable_star_rating",
                    "label": "Enable star rating",
					"default": true
                },
				{
                    "type": "richtext",
                    "id": "richtext",
                    "label": "Review info"					
                },
				{
                    "type": "text",
                    "id": "review_time",
                    "label": "Review time"					
                }
			]
		}
	],
	"presets": [
      {
        "name": "Review slider"
      }
    ]
  }
{% endschema %}