<div class="product_review">
  <div class="product_review_inner section_start{% if section.settings.bg_shape != blank %} full_bg_shape{% endif %}"{% if section.settings.bg_shape != blank %} style="background-image:url('{{ section.settings.bg_shape }}');"{% endif %}>
    <div class="product_review_container page-width">
      {% if section.settings.section_title != blank %}
      <div class="section_header text-center">
        <h2>{{ section.settings.section_title }}</h2>
        {% if section.settings.section_info != blank %}
        <div class="richtext">
        	{{ section.settings.section_info }}
        </div>
        {% endif %}
      </div>
      {% endif %}
      <div class="product_review_start">
        <div class="product_review_row list-unstyled grid grid--3-col-tablet align-items-center justify-content-center">
        	{% for block in section.blocks %}
          	<div class="grid__item mb-3">
              <div class="product_review_card p-3">
                <div class="product_review_card_top d-flex align-items-center justify-content-between">                  
                  <div class="product_review_card_top_info">
                    {% if block.settings.reviewer_name != blank %}
                    	<h6>{{ block.settings.reviewer_name }}</h6>
                    {% endif %}
                    {% if block.settings.enable_star_rating != blank %}
                    <div class="star_rating">
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>                   
                    </div>
                    {% endif %}
                  </div>	     
                  {% if block.settings.product_img != blank %}
                  <div class="product_review_card_top_img">
                  	<img class="object_cover" width="68px" height="68px" src="{{ block.settings.product_img | img_url: 'master' }}" alt="{{ block.settings.product_img.alt }}"/>
                  </div>
                  {% endif %}
                </div>
                <div class="product_review_card_bottom">
                  	{% if block.settings.richtext != blank %}
                	<div class="richtext fs_14 py-2">
                        <p>{{ block.settings.richtext }}</p>
                    </div>
                  	{% endif %}
                  	{% if block.settings.review_time != blank %}
                  		<span class="fs_14">{{ block.settings.review_time }}</span>
                  	{% endif %}
                </div>
              </div>
          	</div>
          	{% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% if section.settings.bg_color != blank %}
<style>
  .product_review_inner{
    background-color:{{ section.settings.bg_color }};
    background-position: right;
    background-repeat: no-repeat;    
    background-size: contain;
  }
</style>
{% endif %}

{% schema %}
  {
    "name": "Product review",
	"tag": "section",	
    "settings": [
		{
			"type": "text",
			"id": "bg_shape",
			"label": "Background shape",
			"info": "Upload the shape SVG into files and paste the file URL here."
		},
		{
			"type": "color",
			"id": "bg_color",
			"label": "Background color"
		},
		{
			"type": "header",
			"content": "section header"
		},
		{
			"type": "text",
			"id": "section_title",
			"label": "Section title"
		},
		{
			"type": "richtext",
			"id": "section_info",
			"label": "Section info"
		}
	],
	"blocks": [
		{
			"type": "productReview",
			"name": "Product Review",
            "settings":[
				{
                    "type": "image_picker",
                    "id": "product_img",
                    "label": "Product image",
					"info": "Use 68X68 dimension image"
                },
				{
                    "type": "text",
                    "id": "reviewer_name",
                    "label": "Reviewer name",
					"default": "Ashley"
                },
				{
                    "type": "checkbox",
                    "id": "enable_star_rating",
                    "label": "Enable star rating",
					"default": true
                },
				{
                    "type": "richtext",
                    "id": "richtext",
                    "label": "Review info"					
                },
				{
                    "type": "text",
                    "id": "review_time",
                    "label": "Review time"					
                }
			]
		}
	],
	"presets": [
      {
        "name": "Product review"
      }
    ]
  }
{% endschema %}