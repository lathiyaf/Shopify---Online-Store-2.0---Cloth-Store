{%- style -%}
.section-{{ section.id }}-padding {
  padding-top: calc({{ section.settings.padding_top }}px * 0.75);
  padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}
{%- endstyle -%}

<div class="instagram_feed{% if section.settings.bg_shape != blank %} full_bg_shape{% endif %}"{% if section.settings.bg_shape != blank %} style="background-image:url('{{ section.settings.bg_shape }}');"{% endif %}>
  <div class="section-{{ section.id }}-padding">
    {{ section.settings.custom_code }}
  </div>
</div>

{% if section.settings.bg_color != blank %}
<style>
  .instagram_feed{
    background-repeat: no-repeat;
    background-color:{{ section.settings.bg_color }};
  } 
</style>
{% endif %}

{% schema %}
{
  "name": "Instagram Feed",
  "tag": "section",
  "class": "section pt-4 small-hide",
  "settings": [
	{
      "type": "text",
      "id": "bg_shape",
      "label": "Background shape",
      "info": "Upload the shape SVG into files and paste the file URL here."
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color"
    },
    {
      "type": "html",
      "id": "custom_code",
      "label": "Instafeed Code",
      "default": "<div id='insta-feed'></div>"  
    },    
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "Instagram Feed"
    }
  ]
}
{% endschema %}
